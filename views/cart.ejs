    <br>
    <div class="row">
    <div class="col-lg-12">
        <h2>Shopping Cart  <span><a href="/cart/remove">Empty cart</a></span></h2>
         <% if(cart.items.length==0){%>
        <p>There are no items in the list</p>
        
        <%}else{%>
        <table border="1 solid black">
        <thead>
            <tr>
                <th width="100"><center>SL.NO</center></th>
                <th width="650"><center>Item</center></th>
                <th width="100"><center>Quantity</center></th>
                <th width="100"><center>Total</center></th>
                
            
            
            </tr>
            
            
            
            </thead>
        <tbody>
           
            <% for(var i=0; i < cart.items.length; i++) { %>
           
            <tr>
                <td><center><%=i+1%></center></td>
            <td><center>
                <a href="/details/<%=cart.items[i].item%>"><%=cart.items[i].title%></a></center>
                </td>
                <td><center><%=cart.items[i].qty%></center></td>
                <td><center><%=cart.items[i].qty*cart.items[i].price%></center></td>
            
            
            
            </tr>
           <% } %>
           
            </tbody>
        
        
        </table>
        <br>
        <table border="1 solid black">
        <tr>
            <th width="750">Total</th>
            <th width="100"><center><%=cart.qty%></center></th>
            <th width="100"><center><%=cart.total%></center></th>
            </tr>
        
        </table>
        
        
        </div>
        
    	<div class="col-lg-6">
            <br>
        <br>
			<form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post">
				            	<!-- Specifies Buy Now Button -->
				                <input type="hidden" name="cmd" value="_xclick">
				                <!-- PayPal Email -->
				                <input type="hidden" name="business" value="techguyseller@sandbox.com">
				                <!-- Item Name -->
				                <input type="hidden" name="item_name" value="TekBooks Books">
				                <!-- Item ID -->
				                <input type="hidden" name="item_number" value="1">
				                <!-- Currency Code -->
				                <input type="hidden" name="currency_code" value="USD">
				                <!-- Price -->
				                <input type="hidden" name="amount" value="{cart.total}">
				                <!-- Specify Shipping -->
				                <input type='hidden' name='no_shipping' value='1'>
				                <!-- Return method -->
				                <input type='hidden' name='rm' value='2'>
				                <!-- Return URL -->
				                <input type="hidden" name="return" value="http://localhost:3000">
				                <!-- Cancel Return URL -->
				                <input type="hidden" name="cancel_return" value="http://localhost:3000">
				             			           
				                <!-- Button -->
				                <input type="image" src="https://www.paypalobjects.com/webstatic/en_US/btn/btn_buynow_107x26.png" name="submit" alt="Buy Now">
				            </form> 
		</div>
   
    
    
       <%}%>
    </div>
    
    
    
    
    </body>





